{
  "name": "vscode-rgb-everywhere",
  "displayName": "RGB Everywhere",
  "description": "Animate status bar font color with a continuous rainbow effect",
  "version": "0.0.11",
  "publisher": "eltociear",
  "license": "MIT",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/eltociear/vscode-rgb-everywhere"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Themes",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rgb-everywhere.enable",
        "title": "RGB Everywhere: Enable Rainbow Effect"
      },
      {
        "command": "rgb-everywhere.disable",
        "title": "RGB Everywhere: Disable Rainbow Effect"
      },
      {
        "command": "rgb-everywhere.status",
        "title": "RGB Everywhere: Check Status"
      }
    ],
    "configuration": {
      "title": "RGB Everywhere",
      "properties": {
        "rgbEverywhere.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable rainbow animation on status bar"
        },
        "rgbEverywhere.animationSpeed": {
          "type": "number",
          "default": 2,
          "minimum": 0.5,
          "maximum": 10,
          "description": "Animation speed in seconds (lower = faster)"
        },
        "rgbEverywhere.target.statusbar": {
          "type": "boolean",
          "default": true,
          "description": "Status bar (bottom)"
        },
        "rgbEverywhere.target.sidebar": {
          "type": "boolean",
          "default": true,
          "description": "Sidebar (file explorer, extensions, etc.)"
        },
        "rgbEverywhere.target.activitybar": {
          "type": "boolean",
          "default": true,
          "description": "Activity bar (leftmost icons)"
        },
        "rgbEverywhere.target.titlebar": {
          "type": "boolean",
          "default": true,
          "description": "Title bar (top)"
        },
        "rgbEverywhere.target.panel": {
          "type": "boolean",
          "default": true,
          "description": "Panel area UI (terminal tabs, output tabs, etc. - Note: terminal text uses Canvas and cannot be colorized)"
        },
        "rgbEverywhere.target.editor": {
          "type": "boolean",
          "default": true,
          "description": "Editor area (code text)"
        },
        "rgbEverywhere.target.tabs": {
          "type": "boolean",
          "default": true,
          "description": "Tab bar (editor tabs)"
        },
        "rgbEverywhere.target.breadcrumbs": {
          "type": "boolean",
          "default": true,
          "description": "Breadcrumbs (file path navigation)"
        },
        "rgbEverywhere.target.menubar": {
          "type": "boolean",
          "default": true,
          "description": "Menu bar (File, Edit, View, etc.)"
        },
        "rgbEverywhere.target.auxiliarybar": {
          "type": "boolean",
          "default": true,
          "description": "Secondary sidebar (right side)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0"
  }
}
